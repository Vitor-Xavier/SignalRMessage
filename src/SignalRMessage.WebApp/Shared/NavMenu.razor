@using Container;
@inject StateContainer StateContainer

<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">SignalR Message<br />@StateContainer.User.Username</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">

        @foreach (var contact in _contacts)
        {
            <li class="nav-item px-3">
                <NavLink @key="contact.Username" class="nav-link" href="@($"chat/private/{contact.Username}")" Match="NavLinkMatch.All">
                    <i class="fas fa-comment-alt mr-3"></i> @contact.Username
                </NavLink>
            </li>
        }
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="counter">
                <i class="fas fa-plus mr-3"></i> Counter
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="fetchdata">
                <i class="fas fa-cloud-sun mr-3"></i> Fetch data
            </NavLink>
        </li>
    </ul>
</div>